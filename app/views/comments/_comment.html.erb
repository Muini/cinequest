<%= div_for comment do %>
  <img class="comment-img" src=<%= comment.user.url_img %> alt />
  <h4 class="comment-author"><%= sanitize(comment.user.pseudo) %></h4>
  <span class="date"><small><%= time_ago_in_words(comment.created_at) %> ago</small></span>

  <p class="comment-message"><%= sanitize(comment.message) %></p>

  <% if logged_in? %>
      <%= link_to 'Delete', post_comment_path(comment.post, comment), method: :delete, remote: true %>
  <% end %>
  <hr />
<% end %>