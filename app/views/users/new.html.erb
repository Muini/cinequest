<h1>Inscription</h1>
<p>Inscrivez vous sur CineQuest</p>

<%= form_for @user do |f| %> 
 
  <%= render 'shared/error_messages', object: f.object %>
 
  <%= f.label "Pseudo" %>:    
  <%= f.text_field :pseudo, placeholder:"xXxD4rKxXx" %><p>3 à 25 caractères</p><br/>

  <%= f.label "Nom" %>:    
  <%= f.text_field :nom, placeholder:"John" %>
  <%= f.label "Prenom" %>:    
  <%= f.text_field :prenom, placeholder:"Rambo" %><br/>
  
  <%= f.label "e-mail" %>:
  <%= f.text_field :email, placeholder:"hi@cinequest.fr"  %><br/>
  
  <%= f.label "Mot de passe" %>:
  <%= f.password_field :password %><p>6 à 25 caractères</p><br/>
  <!-- img avec ajax check de l'url pour l'afficher -->
  <%= f.label "URL de l'image de profil" %>:    
  <%= f.text_field :url_img, placeholder:"http://img.jpg" %><br/> 
  <br/> 
  <%= f.submit "Que l'aventure commence !" %> 
<% end %>