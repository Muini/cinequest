
<div id="quests">
 
  <ul id="quests_list">
  <% @posts.each do |post| %>
    <li>

      <%= link_to post, remote: true do %>

        <% if post.found %>
          <p class="ql_found uppercase_font white">trouvée</p>
        <% end %>
        <div class="ql_img min_quest_picture">
          <%= image_tag post.url_img, alt: "Vignette de la quète" %>
        </div>
        <div class="ql_content">
          <h1 class="uppercase_font blue">quête <span class="ql_nbr red">#<%= post.id %></span></h1>
          <p class="ql_infos lowercase_light_font blue"><%= time_ago_in_words(post.created_at) %> par <%= sanitize(post.user.pseudo) %></p>
        </div>

      <% end %>

    </li>
  <% end %>
  </ul>
  
  <%= link_to "nouvelle quète", new_post_path, class:"blue uppercase_font ql_new", id:"ql_new" %>
  
</div>

<div id="quest">
    
    <section id="home">
        <header>
            <h1 class="h_logo">
                <%= image_tag "logo_640.png", alt: "CineQuest" %>
            </h1>

            <h2 class="lowercase_light_font blue h_baseline">Prenez part à l'épique bataille des noms de films</h2>
        </header>
        
        <section>
            <% if logged_in? %>
                <h3 class="lowercase_light_font blue h_welcome">Bon retour sur CineQuest, <%= current_user.pseudo %> !</h3>
            <% else %>
                <h3 class="lowercase_light_font blue h_welcome">Bienvenue sur CineQuest !</h3>
            <% end %>
            <% if !logged_in? %>
                <%= link_to "inscription", :signin, class: "blue uppercase_font action_btn" %>
                <%= link_to "connexion", :login, class: "blue uppercase_font action_btn" %>
            <% end %>
        </section>
        
    </section>

</div>

