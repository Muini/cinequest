<h1>Quete n°<%= @post.id %></h1>

<img src=<%= @post.url_img %> alt />

<% if @post.found %>
  <a href=<%= @post.url_film %> target="_blank" ><h3><%= @post.film_name %></h3></a>
<% end %>

<% unless @post.found || current_user.id == @post.user.id  %>
  <div id="comment-form">
    <%= render 'comments/comment_form' %>
  </div>
<% end %>

<div id="comments-list">
  <%= render partial: @post.reload.comments %>
</div>
