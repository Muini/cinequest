<section class="a_quest">
    <header class="q_img_content">
       <div class="q_img_wrapper">
           <%= image_tag sanitize(@post.url_img), alt: "La capture du film" %>
       </div>
       <div class="q_img_overlay">
           <h1>#<%= @post.id %></h1>
           <p class="q_difficulty">
                Difficult√©
                <span class="q_difficulty_<%= @post.difficulty %>" ></span>
           </p>
       </div>
    </header>
    
    <% if logged_in? %>
        <% unless @post.found || current_user.id == @post.user.id || @post.closed %>
            <section class="q_answer">
                <%= render 'comments/comment_form' %>
            </section>
        <% end %>
    <% end %>
    
    <% if @post.difficulty == 0 %>
        <section class="q_clue">
            <p><%= sanitize(@post.clue) %></p>
        </section>
    <% end %>
    
    <% if @post.found %>
        <section class="q_title">
            <h1><%= sanitize(@post.film_name) %></h1>
            <a href=<%= sanitize(@post.url_film) %> target="_blank" class="q_film_link_label" ></a>
        </section>
    <% end %>

    <footer id="comments_list">
      <%= render partial: @post.reload.comments %>
    </footer>
</section>
