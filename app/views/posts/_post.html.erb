<h1>Quete n°<%= @post.id %></h1>

<p>Proposé par <%= link_to post.user.pseudo, user_url(post.user.pseudo) %></p>

<%= image_tag @post.url_img, alt: "La capture du film" %>

<% if @post.found %>
  <h3 style="color:green;">Cette image à trouvé son film :</h3>
  <a href=<%= @post.url_film %> target="_blank" ><h3><%= sanitize(@post.film_name) %></h3></a>
<% end %>

<p>Difficulté : 
  <%= 'Facile' if @post.difficulty == 0 %>
  <%= 'Moyen' if @post.difficulty == 1 %>
  <%= 'Difficile' if @post.difficulty == 2 %>
</p>

<% if @post.difficulty == 0 && !@post.clue.nil? %>
  <p>Indice(s) : <%= sanitize(@post.clue) %></p>
<% end %>

<% if logged_in? %>
  <% unless @post.found || current_user.id == @post.user.id || @post.closed %>
    <div id="comment-form">
      <%= render 'comments/comment_form' %>
    </div>
  <% end %>
<% end %>

<div id="comments-list">
  <%= render partial: @post.reload.comments %>
</div>
